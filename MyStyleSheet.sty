%=========================new commands================================
\newcommand{\seemore}[1]{
    \bigskip
    \href{#1}{See more here: #1}
    \bigskip
}

\newcommand{\seemoreLabel}[1]{
    \bigskip
    \hyperref[ref:#1]{ See more here: #1}
    \bigskip
}

\newcommand{\image}[3]{
    \begin{figure}[ht]
        \centering
        \includegraphics[width=#3\textwidth]{#1}
        \caption{#2}
        \label{fig:#2}
    \end{figure}
}